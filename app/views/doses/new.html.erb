<div class="container">
<div class="container bg-white p-3 m-3">
  <h1>New Dose for: [<%= @cocktail.name %>]</h1>
  <%= link_to "Back", cocktail_path(params[:cocktail_id]), class: "btn btn-info" %>
</div>

  <div class="container p-3 m-3">
    <%= simple_form_for [@cocktail, @dose] do |f| %>
      <%= f.input :description %>
      <%= f.association :ingredient %>
      <%= f.button :submit, class: "btn btn-success" %>
    <% end %>
  </div>
</div>
